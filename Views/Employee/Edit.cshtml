@model CRUDDEMO1.Models.Employee
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>
<h3>Employee Edit</h3>
<hr />

<div class="row">
    <div class="col-md-12">
        <!-- Employee Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h5>Employee Information</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Company" class="control-label"></label>
                                <input asp-for="Company" class="form-control" />
                                <span asp-validation-for="Company" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Gender" class="control-label"></label>
                                <select asp-for="Gender" class="form-control">
                                    <option value="">==Select Gender==</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Department" class="control-label"></label>
                                <input asp-for="Department" class="form-control" />
                                <span asp-validation-for="Department" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Save Employee" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Children Information -->
        <div class="card mb-4">
            <div class="card-header">
                <h5>Children Information</h5>
            </div>
            <div class="card-body">
                @if (Model.Children != null && Model.Children.Any())
                {
                    <p><strong>Has Children:</strong> Yes</p>
                    <p><strong>Number of Children:</strong> @Model.Children.Count</p>

                    int childIndex = 1;
                    @foreach (var child in Model.Children)
                    {
                        <div class="card mt-3">
                            <div class="card-header">
                                <h6>Child @childIndex Information</h6>
                            </div>
                            <div class="card-body">
                                <form asp-action="EditChild" asp-route-childId="@child.Id">
                                    <input type="hidden" name="Id" value="@child.Id" />
                                    <input type="hidden" name="EmployeeId" value="@child.EmployeeId" />
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label">Name</label>
                                                <input name="Name" class="form-control" value="@child.Name" />
                                                <span class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">Age</label>
                                                <input name="Age" class="form-control" type="number" value="@child.Age" />
                                                <span class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="control-label">Gender</label>
                                                <select name="Gender" class="form-control">
                                                    <option value="">==Select Gender==</option>
                                                    <option value="Male" selected="@(child.Gender == "Male")">Male</option>
                                                    <option value="Female" selected="@(child.Gender == "Female")">Female</option>
                                                </select>
                                                <span class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label">School</label>
                                                <input name="School" class="form-control" value="@child.School" />
                                                <span class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="control-label">Grade</label>
                                                <input name="Grade" class="form-control" value="@child.Grade" />
                                                <span class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mt-3">
                                        <input type="submit" value="Save Child" class="btn btn-success" />
                                    </div>
                                </form>
                            </div>
                        </div>
                        childIndex++;
                    }
                }
                else
                {
                    <p><strong>Has Children:</strong> No</p>
                    <p class="text-muted">This employee has no children information recorded.</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}