@{
    ViewData["Title"] = "Yangi parol kiritish";
}

<h2>Yangi parol kiritish</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form method="post" action="/Account/ResetPassword">
    <input type="hidden" name="username" value="@ViewBag.Username" />
    <div class="form-group">
        <label for="newPassword">Yangi parol</label>
        <input type="password" name="newPassword" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Parolni yangilash</button>
</form>
<p><a href="/Account/Login">Tizimga kirish</a></p>