@{
    ViewData["Title"] = "Parolni unutdingizmi?";
}

<h2>Parolni unutdingizmi?</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<form method="post" action="/Account/ForgotPassword">
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" name="username" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Davom etish</button>
</form>
<p><a href="/Account/Login">Tizimga kirish</a></p>